@page "{Id?}"
@model IdentityApp.Pages.Identity.Admin.EditModel
@{
    ViewBag.Workflow = "Edit";
}

<div asp-validation-summary="All" class="text-danger m-2"></div>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>UserName</label>
        <input asp-for="IdentityUser.UserName" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label>Normalized UserName</label>
        <input asp-for="IdentityUser.NormalizedUserName" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="IdentityUser.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Normalized Email</label>
        <input asp-for="IdentityUser.NormalizedEmail" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input asp-for="IdentityUser.PhoneNumber" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-page="Dashboard" class="btn btn-secondary">Cancel</a>
    </div>
</form>