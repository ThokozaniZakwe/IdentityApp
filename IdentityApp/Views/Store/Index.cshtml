@model IQueryable<Product>

<h4 class="bg-primary text-center text-white p-2">MVC - Level 2 - Signed-In User</h4>
<div class="p-2">
    <table class="table table-sm table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th><th>Name</th><th>Category</th>
                <th class="text-right">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Product p in Model.OrderBy(p => p.Id))
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Category</td>
                    <td class="text-right">R @p.Price.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>